<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CPFMS</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/css/bootstrap-select.min.css"
        rel="stylesheet" />

    <link rel="stylesheet" href="/css/master-index.css">

    <script type="text/javascript" src="/js/masters/organization/organization.js"></script>
    <script type="text/javascript" src="/js/master-index.js"></script>

    <link rel="stylesheet" href="/css/navbar/navbar.css">

    <script>

        function submitform(pagenum) {
            totalpages = parseInt("<%= totalpages %>")
            if (pagenum > totalpages)
                return false;
            if (pagenum <= 0)
                return false;
            $("#paginationform #pageno").val(parseInt(pagenum));
            $("#paginationform").submit();
        }

        $(document).ready(function () {

            // Pagination Form Submit
            $(".entries #entryid").change(function () {
                $(".entries").submit();
            });

        });

    </script>

</head>

<body>

    <%- include('../../partials/navbar.ejs') %>
    <main>
        <div class="container">
            <%- include('../../partials/err.ejs') %>
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Master - <b>Organization</b></h2>
                        </div>
                        <div class="col-sm-6" id="shortcut">
                            <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal" id="addnew"><i
                                    class="material-icons">&#xE147;</i> <span><b>Add New</b></span></a>
                            <% if(user_type === 'ADMIN') { %>
                            <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"
                                id="multipledelete"><i class="material-icons">&#xE15C;</i>
                                <span><b>Delete</b></span></a>
                            <% } %>
                            <a href="#searchEmployeeModal" class="btn btn-warning" data-toggle="modal" id="search"><i
                                    class="material-icons">&#xe8b6;</i> <span><b>Search</b></span></a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <form action="/organization" class="entries">
                                    <span>
                                        <select id="entryid" name="entries_per_page">
                                            <% if(entries_per_page==25) { %>
                                            <option selected>25</option>
                                            <% } else { %>
                                            <option>25</option>
                                            <% } %>
                                            <% if(entries_per_page==50) { %>
                                            <option selected>50</option>
                                            <% } else { %>
                                            <option>50</option>
                                            <% } %>
                                            <% if(entries_per_page==100) { %>
                                            <option selected>100</option>
                                            <% } else { %>
                                            <option>100</option>
                                            <% } %>
                                        </select>
                                    </span>
                                </form>
                            </th>
                            <th style="width: auto !important;">Organization ID</th>
                            <th style="width: auto !important;">Organization Name</th>
                            <% if(user_type === 'ADMIN') { %>
                            <th>Actions</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var item of data) { %>
                        <tr id="<%= item.organization_id%>">
                            <td>
                                <% if(user_type === 'ADMIN') { %>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="<%= item.organization_id %>">
                                    <label for="<%= item.organization_id %>"></label>
                                </span>
                                <% } %>
                            </td>
                            <td><%= item.organization_id %></td>
                            <td><%= item.organization_name %></td>
                            <% if(user_type === 'ADMIN' ) { %>
                            <td>
                                <a href="#editEmployeeModal" class="edit" data-toggle="modal"
                                    id="<%= item.organization_id %>"><i class="material-icons" data-toggle="tooltip"
                                        title="Edit">&#xE254;</i></a>
                                <a href="#deleteEmployeeModal" class="delete" data-toggle="modal"
                                    id="<%= item.organization_id %>"><i class="material-icons" data-toggle="tooltip"
                                        title="Delete">&#xE872;</i></a>
                            </td>
                            <% } %>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                <div class="clearfix">
                    <% var starting = (pagenum-1)*entries_per_page + 1 %>
                    <% var ending = starting + data.length - 1 %>
                    <% if(totalentries>0) { %>
                    <div class="hint-text">Showing entries from <b><%= starting %></b> to <b><%= ending %></b> out of
                        <b><%= totalentries %></b> entries
                    </div>
                    <% } %>
                    <form action="/organization" id="paginationform" method="GET">
                        <ul class="pagination">
                            <li class="page-item">
                                <span class="a page-link">
                                    <% if(pagenum <= 1) { %>
                                    <span class="a a-disabled" id="first">
                                        <i class="material-icons">&#xe045;</i>
                                    </span>
                                    <span class="a a-disabled" id="previous">
                                        <i class="material-icons flip-to-left one-change">&#xe037;</i>
                                    </span>
                                    <% } else { %>
                                    <span class="a" id="first" onclick="submitform(1)">
                                        <i class="material-icons">&#xe045;</i>
                                    </span>
                                    <span class="a" id="previous" onclick="submitform('<%= pagenum-1 %>')">
                                        <i class="material-icons flip-to-left one-change">&#xe037;</i>
                                    </span>
                                    <% } %>
                                    <input type="number" name="pagenum" id="pageno" value="<%= pagenum %>"
                                        max="<%= totalpages %>" min="1" style="text-align: center;">
                                    <input type="hidden" name="entries_per_page" value="<%= entries_per_page %>">
                                    / <%= totalpages %>
                                    <% if(pagenum >= totalpages) { %>
                                    <span class="a a-disabled">
                                        <i class="material-icons one-change" id="next">&#xe037;</i>
                                    </span>
                                    <span class="a a-disabled" id="last">
                                        <i class="material-icons">&#xe044;</i>
                                    </span>
                                    <% } else { %>
                                    <span class="a" id="next" onclick="submitform('<%= pagenum+1 %>')">
                                        <i class="material-icons one-change">&#xe037;</i>
                                    </span>
                                    <span class="a" id="last" onclick="submitform('<%= totalpages %>')">
                                        <i class="material-icons">&#xe044;</i>
                                    </span>
                                    <% } %>
                                </span>
                            </li>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <!-- Search Modal HTML -->
    <div id="searchEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/organization/search" class="form-horizontal" method="GET">
                    <div class="modal-header">
                        <h3 class="modal-title"><b><u>Search Organization</u></b></h3>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="text" name="searchtext" id="search-text" placeholder="Search Text...">
                        </div>
                        <div class="form-group">
                            <h4><b><i>Search For :</i></b></h4>
                            <div>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="organization_id" name="organization_id" value="organization_id" checked>
                                    <label for="organization_id">Organization ID</label>
                                </span>
                            </div>
                            <div>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="organization_name" name="organization_name" value="organization_name">
                                    <label for="organization_name"> Organization Name </label>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-warning" value="Search">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Add Modal HTML -->
    <div id="addEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/organization" class="form-horizontal" method="POST">
                    <div class="modal-header">
                        <h3 class="modal-title"><b><u>Add Organization</u></b></h3>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label><i>Organization ID</i></label>
                            <input type="text" class="form-control" name="organization_id" maxlength="10"
                                placeholder="Enter Organization ID" required>
                        </div>
                        <div class="form-group">
                            <label><i>Organization Name</i></label>
                            <input type="text" class="form-control" name="organization_name"
                                placeholder="Enter Organization Name" required>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                <input type="submit" class="btn btn-success" value="Add">
            </div>
            </form>
        </div>
    </div>
    <% if(user_type === 'ADMIN') { %>
    <!-- Edit Modal HTML -->
    <div id="editEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/organization/edit" method="POST">
                    <div class="modal-header">
                        <h3 class="modal-title"><b><u>Edit Organization</u></b></h3>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label><i>Organization ID</i></label>
                            <input type="text" class="form-control" name="organization_id" maxlength="10"
                                placeholder="Enter Organization ID" id="input-disabled" required readonly>
                        </div>
                        <div class="form-group">
                            <label><i>Organization Name</i></label>
                            <input type="text" class="form-control" name="organization_name"
                                placeholder="Enter Organization Name" value="" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-info" value="Save">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Delete Modal HTML -->
    <div id="deleteEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/organization/delete" method="POST">
                    <div class="modal-header">
                        <h4 class="modal-title">Delete Organization</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure ...?<br>Do want to delete this Record ?</p>
                        <p class="text-warning"><small>This action cannot be undone.</small></p>
                    </div>
                    <div class="modal-footer">
                        <div id="hidden-input"></div>
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel" id="cancel">
                        <input type="submit" class="btn btn-danger" value="Delete">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } %>
</body>

</html>
