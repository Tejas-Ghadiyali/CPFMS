<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CPFMS</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/css/bootstrap-select.min.css"
        rel="stylesheet" />

    <link rel="stylesheet" href="/css/master-index.css">

</head>

<body>

    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <%- include('../../partials/err.ejs') %>
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2>Master - <b>Account Head</b></h2>
                    </div>
                    <div class="col-sm-7">
                        <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal" id="addnew"><i
                                class="material-icons">&#xE147;</i> <span><b>Add New</b></span></a>
                        <% if(user_type === 'ADMIN') { %>
                        <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal" id="multipledelete"><i
                                class="material-icons">&#xE15C;</i> <span><b>Delete</b></span></a>
                        <% } %>
                        <a href="/accounthead" class="btn btn-warning" data-toggle="modal" id="clearsearch"><i
                                class="material-icons">&#xe888;</i> <span><b>Clear</b></span></a>
                        <b>Searched Text : </b> <input type="text" value="<%= searchtext %>"
                            style="width: 30%; text-align: center; color: black;" disabled>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <span class="entries">
                                <select id="entryid" name="entries_per_page">
                                    <option value="25" selected>25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>
                            </span>
                        </th>
                        <th>A/c ID</th>
                        <th>Account Head Name</th>
                        <th>A/c Type</th>
                        <th>Village ID</th>
                        <th>Society</th>
                        <% if(user_type === 'ADMIN') { %>
                        <th>Actions</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody id="search-rows">
                    <!-- All Data Rows -->
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">
                    <!-- Info About Data Entry -->
                </div>
                <ul class="pagination">
                    <li class="page-item">
                        <form id="pagination-form" method="GET" onsubmit="formsubmit(event)">
                            <span class="a page-link">
                                <!-- Pagination Footer -->
                            </span>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Add Modal HTML -->
    <div id="addEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/accounthead" class="form-horizontal" method="POST">
                    <div class="modal-header">
                        <h3 class="modal-title"><b><u>Add Account Head</u></b></h3>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label><i>Account Head ID</i></label>
                            <input type="text" class="form-control" name="account_id" maxlength="10"
                                placeholder="Enter Account Head ID" required>
                        </div>
                        <div class="form-group">
                            <label><i>Account Head Name</i></label>
                            <input type="text" class="form-control" name="account_name"
                                placeholder="Enter Account Head Name" required>
                        </div>
                        <div class="form-group">
                            <label><i>Account Head Type</i></label>
                            <select class="form-control selectpicker" id="select-account_type-add"
                                data-live-search="true" name="account_type">
                                <option data-tokens="Balance Sheet" value="B/S">Balance Sheet (B/S)
                                </option>
                                <option data-tokens="Profit & Loss" value="P&L">Profit & Loss Account
                                    (P&L)</option>
                                <option data-tokens="Trading Account" value="T/A">Trading Account (T/A)
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label><i>Village</i></label>
                            <select class="form-control selectpicker" id="select-village_id-add" data-live-search="true"
                                name="village_id">
                                <% for(item of villages){ %>
                                    <option><%= item.village_id %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label><i>Is Society ?</i></label>
                            <div class="radio">
                                <label class="radio-inline"><input type="radio" name="is_society" value="1"
                                        checked>Yes</label>
                                <label class="radio-inline"><input type="radio" name="is_society" value="0">No</label>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                <input type="submit" class="btn btn-success" value="Add">
            </div>
            </form>
        </div>
    </div>
    <% if(user_type === 'ADMIN') { %>
    <!-- Edit Modal HTML -->
    <div id="editEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/accounthead/edit" method="POST">
                    <div class="modal-header">
                        <h3 class="modal-title"><b><u>Edit Account Head</u></b></h3>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label><i>Account Head ID</i></label>
                            <input type="text" class="form-control" name="account_id" maxlength="10"
                                placeholder="Account Head ID" id="input-disabled" required readonly>
                        </div>
                        <div class="form-group">
                            <label><i>Account Head Name</i></label>
                            <input type="text" class="form-control" name="account_name"
                                placeholder="Enter Account Head Name" value="" required>
                        </div>
                        <div class="form-group">
                            <label><i>Account Head Type</i></label>
                            <select class="form-control selectpicker" id="select-account_type-edit"
                                data-live-search="true" name="account_type">
                                <option data-tokens="Balance Sheet" value="B/S">Balance Sheet (B/S)
                                </option>
                                <option data-tokens="Profit & Loss" value="P&L">Profit & Loss Account
                                    (P&L)</option>
                                <option data-tokens="Trading Account" value="T/A">Trading Account (T/A)
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label><i>Village</i></label>
                            <select class="form-control selectpicker" id="select-village_id-edit"
                                data-live-search="true" name="village_id">
                                <% for(item of villages){ %>
                                    <option><%= item.village_id %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label><i>Is Society ?</i></label>
                            <div class="radio">
                                <label class="radio-inline"><input type="radio" name="is_society" value="1"
                                        checked>Yes</label>
                                <label class="radio-inline"><input type="radio" name="is_society" value="0">No</label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-info" value="Save">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Delete Modal HTML -->
    <div id="deleteEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/accounthead/delete" method="POST">
                    <div class="modal-header">
                        <h4 class="modal-title">Delete Account Head</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure ...?<br>Do want to delete these Records ?</p>
                        <p class="text-warning"><small>This action cannot be undone.</small></p>
                    </div>
                    <div class="modal-footer">
                        <div id="hidden-input"></div>
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel" id="cancel">
                        <input type="submit" class="btn btn-danger" value="Delete">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% } %>

    <script src="/js/master-index.js"></script>

    <script>

        var data = <%- JSON.stringify(data) %>;
        var entries_per_page = 25;
        var pagenum = 1;
        var totalentries = data.length;
        var totalpages = Math.ceil(totalentries / entries_per_page);
        var inhtml, item;

        $(document).ready(function () {

            // Empty Entry
            $("#deleteEmployeeModal form #hidden-input").empty();

            fillrow(0, entries_per_page);

            // Hint-text in clearfix
            if (totalentries == 0) {
                inhtml = `<b>No entry found.</b>`;
            }
            else {
                inhtml = `Showing entries from <b>1</b> to <b>` + Math.min(entries_per_page, totalentries) + `</b> out of <b>` + totalentries + `</b> entries`;
            }
            $(".clearfix .hint-text").append(inhtml);

            // Pagination Initial Setup
            function initial_pagination_setup() {
                totalpages = Math.ceil(totalentries / entries_per_page);
                pagenum = 1;
                if (totalentries !== 0) {
                    inhtml = `
                        <span id="pagination-pre">                 
                            <span class="a a-disabled" id="first">
                                <i class="material-icons">&#xe045;</i>
                            </span>
                            <span class="a a-disabled" id="previous">
                                <i class="material-icons flip-to-left one-change">&#xe037;</i>
                            </span>
                        </span>
                        <input type="number" name="pagenum" id="pageno" min="1" max="`+ totalpages + `" style="text-align: center;" value="` + pagenum + `"> / ` + totalpages;
                    if (pagenum == totalpages) {
                        inhtml = inhtml + `
                            <span id="pagination-next">
                                <span class="a a-disabled" id="next">
                                    <i class="material-icons one-change">&#xe037;</i>
                                </span>
                                <span class="a a-disabled" id="last">
                                    <i class="material-icons">&#xe044;</i>
                                </span>
                            </span>
                            `;
                    }
                    else {
                        inhtml = inhtml + `
                            <span id="pagination-next">
                                <span class="a" id="next" onclick="changepage(3)">
                                    <i class="material-icons one-change">&#xe037;</i>
                                </span>
                                <span class="a" id="last" onclick="changepage(4)">
                                    <i class="material-icons">&#xe044;</i>
                                </span>
                            </span>
                            `;
                    }
                    $(".pagination .page-link").append(inhtml);
                }
            }

            initial_pagination_setup();

            // Entry Per Page Handler
            $("table #entryid").change(function () {
                entries_per_page = parseInt($(this).children("option:selected").val());
                var ending = Math.min(entries_per_page, totalentries);
                fillrow(0, entries_per_page);
                if (totalentries == 0) {
                    inhtml = `<b>No entry found.</b>`;
                }
                else {
                    inhtml = `Showing entries from <b>` + 1 + `</b> to <b>` + ending + `</b> out of <b>` + totalentries + `</b> entries`;
                }
                $(".clearfix .hint-text").empty();
                $(".clearfix .hint-text").append(inhtml);
                $(".clearfix .page-link").empty();
                initial_pagination_setup();
            });

            // Add Modal Focus
            $(".table-title #addnew").click(function () {
                setTimeout(function () {
                    $("#addEmployeeModal input[name=account_id]").focus();
                }, 500);
            });

            // Multiple Delete Focus to Cancel Button
            $(".table-title #multipledelete").click(function (e) {
                e.preventDefault();
                var checkbox = $('table tbody input[type="checkbox"]');
                var count = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        ++count;
                        var inputhtml = '<input type="hidden" name="ids[]" value="' + this.id + '">';
                        $("#deleteEmployeeModal form #hidden-input").append(inputhtml);
                    }
                });
                if (count == 0)
                    return false;
            });

            // Delete One Entry
            $('table tbody .delete').click(function () {
                setTimeout(function () {
                    $("#deleteEmployeeModal .modal-footer #cancel").focus();
                }, 500);
            });

            //Cancel event of delete modal
            $("#deleteEmployeeModal").on("hidden.bs.modal", function () {
                $("#deleteEmployeeModal form #hidden-input").empty();
            });

        });

        // Pagination Handler
        function changepage(inum, pnum) {
            if (inum == 1) {
                if (pagenum <= 1) {
                    pagenum = 1;
                    return false;
                }
                pagenum = 1;
            }
            else if (inum == 2) {
                if (pagenum <= 1) {
                    pagenum = 1;
                    return false;
                }
                pagenum = pagenum - 1;
            }
            else if (inum == 3) {
                if (pagenum >= totalpages) {
                    pagenum = totalpages;
                    return false;
                }
                pagenum = pagenum + 1;
            }
            else if (inum == 4) {
                if (pagenum >= totalpages) {
                    pagenum = totalpages;
                    return false;
                }
                pagenum = totalpages;
            }
            else {
                if (pnum > totalpages)
                    return false;
                if (pnum <= 0)
                    return false;
                pagenum = pnum;
            }
            var starting = (pagenum - 1) * entries_per_page;
            var ending = starting + Math.min(entries_per_page, totalentries - starting);
            fillrow(starting, ending);
            $(".clearfix .page-link").empty();
            if (totalentries !== 0) {
                if (pagenum == 1) {
                    inhtml = `
                            <span id="pagination-pre">                 
                                <span class="a a-disabled" id="first">
                                    <i class="material-icons">&#xe045;</i>
                                </span>
                                <span class="a a-disabled" id="previous">
                                    <i class="material-icons flip-to-left one-change">&#xe037;</i>
                                </span>
                            </span>
                            <input type="number" name="pagenum" id="pageno" min="1" max="`+ totalpages + `" style="text-align: center;" value="` + pagenum + `"> / ` + totalpages;
                }
                else {
                    inhtml = `
                            <span id="pagination-pre">                 
                                <span class="a" id="first" onclick="changepage(1)">
                                    <i class="material-icons">&#xe045;</i>
                                </span>
                                <span class="a" id="previous" onclick="changepage(2)">
                                    <i class="material-icons flip-to-left one-change">&#xe037;</i>
                                </span>
                            </span>
                            <input type="number" name="pagenum" id="pageno" min="1" max="`+ totalpages + `" style="text-align: center;" value="` + pagenum + `"> / ` + totalpages;
                }
                if (pagenum == totalpages) {
                    inhtml = inhtml + `
                            <span id="pagination-next">
                                <span class="a a-disabled" id="next">
                                    <i class="material-icons one-change">&#xe037;</i>
                                </span>
                                <span class="a a-disabled" id="last">
                                    <i class="material-icons">&#xe044;</i>
                                </span>
                            </span>
                            `;
                }
                else {
                    inhtml = inhtml + `
                            <span id="pagination-next">
                                <span class="a" id="next" onclick="changepage(3)">
                                    <i class="material-icons one-change">&#xe037;</i>
                                </span>
                                <span class="a" id="last" onclick="changepage(4)">
                                    <i class="material-icons">&#xe044;</i>
                                </span>
                            </span>
                            `;
                }
                $(".pagination .page-link").append(inhtml);
            }
            if (totalentries == 0) {
                inhtml = `<b>No entry found.</b>`;
            }
            else {
                inhtml = `Showing entries from <b>` + (starting + 1) + `</b> to <b>` + ending + `</b> out of <b>` + totalentries + `</b> entries`;
            }
            $(".clearfix .hint-text").empty();
            $(".clearfix .hint-text").append(inhtml);
        }
        function formsubmit(e) {
            e.preventDefault();
            var value = parseInt($(".pagination #pagination-form #pageno").val());
            if (isNaN(value))
                return false;
            changepage(5, value);
        }

        // Edit Entry Filler
        function editentry(e) {
            var account_id = e.id.trim();
            var account_name = e.cells.item(2).textContent;
            var account_type = e.cells.item(3).textContent;
            var village_id = e.cells.item(4).textContent;
            var is_society = e.cells.item(5).textContent.trim();
            if (is_society === 'No') {
                is_society = 0;
            }
            else {
                is_society = 1;
            }
            $("#editEmployeeModal input[name=account_id]").val(account_id);
            $("#editEmployeeModal input[name=account_name]").val(account_name);
            $("#editEmployeeModal select[name=account_type]").val(account_type).change();
            $("#editEmployeeModal select[name=village_id]").val(village_id).change();
            $("#editEmployeeModal select[name=account_type]").val(account_type).change();
            $("#editEmployeeModal input[name=is_society][value=" + is_society + "]").prop('checked', true);
            setTimeout(function(){
                $("#editEmployeeModal input[name=account_name]").focus();
            },500);
        }

        // Delete Entry Filler
        function deleteentry(e) {
            var inputhtml = '<input type="hidden" name="ids[]" value="' + e.id + '">';
            $("#deleteEmployeeModal form #hidden-input").append(inputhtml);
        }

        // Data row filler
        function fillrow(starting, ending) {
            $("table #search-rows").empty();
            for (var i = starting; i < ending && i < totalentries; ++i) {
                item = data[i];
                inhtml = `
                    <tr id="`+ item.account_id + `">
                        <td>
                            <% if(user_type === 'ADMIN') { %>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="`+ item.account_id + `">
                                <label for="`+ item.account_id + `"></label>
                            </span>
                            <% } %>
                        </td>
                        <td>`+ item.account_id + `</td>
                        <td>`+ item.account_name + `</td>
                        <td>`+ item.account_type + `</td>
                        <td>`+ item.village_id + `</td>
                        <td>
                            `+ (item.is_society ? "Yes" : "No") + `
                        </td>
                        <% if(user_type === 'ADMIN') { %>
                        <td>
                            <a href="#editEmployeeModal" class="edit" data-toggle="modal" id="`+ item.account_id + `" onclick="editentry(this.parentElement.parentElement)"><i
                                    class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                            <a href="#deleteEmployeeModal" class="delete" data-toggle="modal"
                                id="`+ item.account_id + `" onclick="deleteentry(this.parentElement.parentElement)"><i class="material-icons" data-toggle="tooltip"
                                    title="Delete">&#xE872;</i></a>
                        </td>
                        <% } %>
                    </tr>
                    `;
                $("table #search-rows").append(inhtml);
            }
        }

    </script>

</body>

</html>